div(ng-class="{'container': $root.config.navbar.container, 'container-fluid': !$root.config.navbar.container}")
  .navbar-header
    button.navbar-toggle(type="button", data-template="partials/asideNavigation.jade", data-animation="am-fade-and-slide-right", data-placement="right", title="Menu", data-container="body", bs-aside="aside")
      i.fa.fa-ellipsis-v
    a(href="#" ).navbar-brand
      img(ng-src="{{$root.config.navbar.brand.image.src}}")
  .collapse.navbar-collapse.navbar-ex1-collapse
    ul.nav.navbar-nav#jl-navbar-nav
      li(ng-repeat="site in $root.sites", ng-class="{'active': isActiveClass($index)}", data-match-route="/{{site.href}}"): a(ng-href="#/{{site.href}}") {{site.name}}
    .navbar-form.navbar-right
      language-select