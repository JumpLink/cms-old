nav.navbar(class="navbar-{{$root.config.navbar.type}}", ng-class="{'navbar-inverse': $root.config.navbar.inverse, 'navbar-default': !$root.config.navbar.inverse}", role="users")
  .container-fluid
    .navbar-header
      a.navbar-brand {{'BRAND_SETTINGS' | translate}}
    .collapse.navbar-collapse.navbar-ex1-collapse
      .navbar-right
        language-select
.container
  form(role="form") 
    .form-group
      .text-center: label Activated Languages
        select.form-control(multiple ng-multiple="true", ng-model="$root.config.languages.active", ng-options="lang for lang in $root.config.languages.available")
    .form-group
      .text-center: label Default Languages
        select.form-control(ng-model="$root.config.languages.default", ng-options="lang for lang in $root.config.languages.active")